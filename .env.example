MANGA_LIBRARY_ROOT="/path/to/your/manga/library"

# qBittorrent API Configuration
QBIT_URL="http://localhost:8080"
QBIT_USER="admin"
QBIT_PASS="adminadmin"
QBIT_DOWNLOAD_ROOT="D:\Data\Dir"
# local place to copy torrents
PULL_TEMPDIR="D:/tempdir"


# AI Configuration

# 1. Remote AI (e.g., OpenRouter, OpenAI)
# Used for complex tasks requiring high intelligence (Categorization, Metadata Consensus)
REMOTE_AI_BASE_URL="https://local.home.arpa:12345"
REMOTE_AI_API_KEY="sk-..."
REMOTE_AI_MODEL="anthropic/claude-3-haiku"

# 2. Local AI (e.g., Ollama, LocalAI)
# Used for privacy-sensitive tasks, bulk processing, or simple moderation
LOCAL_AI_BASE_URL="http://local.home.arpa:11434"
LOCAL_AI_API_KEY="ollama" # Usually ignored, but required by some clients
LOCAL_AI_MODEL="llama3"

# 3. Narrative & Categorization Rules
# Path to a text file containing your personal narrative design and categorization rules.
# This file's content will be injected into the AI's consensus prompt to override default logic.
# Use this for highly personalized sorting rules (e.g., "All Isekai goes to Fantasy").
AI__NARRATIVE_PATH="./narrative_guidelines.md"

# 4. Jikan Settings
JIKAN_BASE_URL="https://api.jikan.moe/v4"
JIKAN_RATE_LIMIT_DELAY=1.2
JIKAN_TIMEOUT=10
JIKAN_MAX_RETRIES=3
JIKAN_LOCAL_REPOSITORY_PATH="manga_entries.csv"

# 5. AniList API
ANILIST_SECRET="MFKEY"
ANILIST_API_ID="12345"
ANILIST_APP_NAME="AppName"
ANILIST_Redirect_URI="https://local"

# Global Settings
AI_TIMEOUT=30
